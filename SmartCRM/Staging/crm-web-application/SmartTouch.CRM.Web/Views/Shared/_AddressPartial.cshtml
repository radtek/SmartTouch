<div data-bind="foreach: Addresses">
    <div class="formsubheading">
        [|Address|] <span data-bind="text: ($index() + 1)" class="mrl"></span>
        <input name="primaryAddress" type="radio" data-bind="checked:$root.primaryAddress, checkedValue: $data" />
        <span class="pls">[|Primary|]</span>
        <div class="pull-right">
            <span data-bind="visible: IsDefault() !== true">
                <a href="javascript:void(0)" data-bind="click: $parent.removeAddress"> <i class="icon st-icon-bin-3 black"></i> </a>
            </span>
            <a data-bind="attr:{href:'#address'+($index() + 1)}" href="#acaddressfields1" data-toggle="collapse" data-parent="#accordion" class="address-accordion"><i class="icon st-icon-dropdownarrow"></i></a>
        </div>
    </div>


    <div data-bind="attr:{id:'address'+($index() + 1)}" class="in">
        <div class="clearfix">
            <div class="form-group">
                <label class="control-label">[|Address Type|] <span class="required">*</span></label>
                <input data-bind="kendoDropDownList: {dataValueField: 'DropdownValueID', dataTextField:'DropdownValue', data: $parent.AddressTypes, value: AddressTypeID }" tabindex="11" />
            </div>

            <div class="form-group medium">
                <label class="control-label">[|Country|] <span class="required">*</span></label>
                <input data-bind="kendoDropDownList: {dataTextField:'Name',dataValueField:'Code', data: Countries, value: Country.Code,select:countrySelect,optionLabel: '[|Select|]...' }" tabindex="12" />

            </div>
            <div class="form-group medium">
                <label class="control-label">
                    <!-- ko if: Country.Code()=='CA' -->
                    <span>[|Province|] <span class="required">*</span></span>
                    <!-- /ko -->                    
                    <!-- ko if: Country.Code()=='' || Country.Code() !== 'CA'-->
                    <span>[|State|] <span class="required">*</span></span>
                    <!-- /ko -->
                </label>
                <input data-bind="kendoDropDownList: {dataTextField:'Name',dataValueField:'Code', data: States, value: State.Code,optionLabel: '[|Select|]...'}" tabindex="13" />
            </div>



        </div>
        <div class="clearfix">
            <div class="form-group">
                <label class="control-label">[|Address Line 1|]</label>
                <input type="text" class="form-control" data-bind="value: AddressLine1" maxlength="95" tabindex="14">
            </div>

            <div class="form-group medium">
                <label class="control-label">
                    <!-- ko if: Country.Code()=='CA' -->
                    <span>[|Municipality|]</span>
                    <!-- /ko -->                    
                    <!-- ko if: Country.Code()=='' || Country.Code() !== 'CA' -->
                    <span>[|City|]</span>
                    <!-- /ko -->

                </label>
                <input type="text" placeholder="" class="form-control" data-bind="value: City" maxlength="35" tabindex="15">
            </div>
            <div class="form-group medium">
                <label class="control-label">
                    <!-- ko if: Country.Code()=='CA' -->
                    <span>[|Postal Code|]</span>
                    <!-- /ko -->                    
                    <!-- ko if: Country.Code()=='' || Country.Code() !== 'CA' -->
                    <span>[|Zip Code|]</span>
                    <!-- /ko -->
                </label>
                <input type="text" class="form-control" data-bind="value:ZipCode" maxlength="11" tabindex="16">
            </div>


        </div>
        <div class="clearfix">
            <div class="form-group">
                <label class="control-label">[|Address Line 2|]</label>
                <input type="text" class="form-control" data-bind="value: AddressLine2" maxlength="95" tabindex="17">
            </div>

        </div>


    </div>

    

</div>
<div class="mbs"><a href="javascript:void(0)" data-bind="click: addAddress" tabindex="18"><i class="icon st-icon-add mrs"></i>[|Add Another Address|]</a></div>
