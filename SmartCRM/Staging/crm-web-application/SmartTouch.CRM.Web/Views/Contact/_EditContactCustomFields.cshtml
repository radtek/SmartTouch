@using SmartTouch.CRM.Entities;

<div class="tabbable new-tabs tabbable-vertical" data-bind="if : CustomFieldTabs().length > 0">
    <ul class=" nav nav-tabs nav-stacked" data-bind="foreach:CustomFieldTabs()">
        <li data-bind="attr:{class:$root.CurrentTabView()==$index()?'active':''}"><a href="" data-bind="text:Name,attr:{id:'customtabid-'+CustomFieldTabId()},click:$root.showCurrentTab.bind($data,$index())"></a></li>
    </ul>
    <div class="tab-content" data-bind="">
        <div class="tab-pane active" data-bind="foreach:CustomFieldTabs()[$root.CurrentTabView()].Sections()">
            <div class=" formsubheading" data-bind="text:Name,attr:{id:'customtabid-'+CustomFieldSectionId()}"></div>
            <div class="clearfix" data-bind="foreach:CustomFields">
                <div class="form-group" data-bind="visible:StatusId()==@((byte)FieldStatus.Active)">
                    <label class="control-label" data-bind="text:Title"></label>
                    <div data-bind="template: { name: 'control-'+FieldInputTypeId() },attr:{id:'control-content-'+FieldId() }" ></div>
                </div>
            </div>
        </div>
    </div>
</div>
