@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "NotFound";
}

@{ 
    var message = ViewBag.ErrorMessage;
}
<div class="body-container">   
    <section class="main-container">
        <div class="error">
            <div class="error-view">
                <div class="error-heading">404</div>
                <div class="error-heading-msg">Page not found</div>
            </div>
            @if (@message != null)
            {
                <div class="error-message">
                    <div class="error-msg-title">Uh no!</div>
                    <div class="error-msg-dis">@message!</div>
                </div>
            }
            else
            {
                <div class="error-message">
                    <div class="error-msg-title">Uh no!</div>
                    <div class="error-msg-dis">The requested resource could not be found!</div>
                </div>
            }

        </div>
    </section>
</div>

