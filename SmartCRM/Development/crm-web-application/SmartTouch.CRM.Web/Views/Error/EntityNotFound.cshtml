@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "EntityNotFound";
}

@{
    var message = ViewBag.ErrorMessage;
}

<div class="body-container">
    <section class="main-container">
        <div class="error">
            <div class="error-view-entity">
                <div class="error-heading-entity">Oops!</div>
                <div class="error-heading-msg-entity">Contact not found</div>
            </div>
            @if (@message != null)
            {
                <div class="error-message-entity">
                    <div class="error-msg-dis">@message</div>
                </div>
            }
            else
            {
                <div class="error-message">
                    <div class="error-msg-dis"></div>
                </div>
            }

        </div>
    </section>
</div>

