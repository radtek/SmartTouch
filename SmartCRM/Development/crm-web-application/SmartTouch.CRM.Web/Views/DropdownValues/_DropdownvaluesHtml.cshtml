@using SmartTouch.CRM.ApplicationServices.ViewModels
@model DropdownViewModel

<div id="dropdownvalues">
    <div>
        <div>
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title"><span class="icon st-icon-menu-pull-down prm"></span><span data-bind="text:Dropdownname"></span> </h4>
            </div>
            <div class="modal-body">
                <div class="dp-topnav-inner-body">
                    <div class="k-grid k-widget k-secondary" id="grid1">
                        <div>
                            <table>
                                <thead class="k-grid-header">
                                    <tr>
                                        <th data-bind="text: 'Dropdown Value'" class="col-30 k-header" style="padding-left:15px;">
                                        </th>                                        
                                        <th data-bind="text: 'Status'" class="col-30 k-header">
                                        </th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach:DropdownValuesList">                                                                                                                  
                                        <td><span style="white-space:initial;text-overflow:ellipsis" data-bind="text:DropdownValue"></span></td> 
                                        <td><span style="white-space:initial;text-overflow:ellipsis" data-bind="text:IsActive == true? 'Active': 'InActive'"></span></td>                                                                           
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var dropdown = @(Html.Raw(Json.Encode(Model)));

        var dropdownViewModel = function (){
            selfDropdownValues = this;
            selfDropdownValues.Dropdownname = dropdown.Dropdownname;
            selfDropdownValues.DropdownValuesList = dropdown.DropdownValuesList;
        };
        var viewModel = dropdownViewModel();
        ko.applyBindings(viewModel,document.getElementById("dropdownvalues"));
    });
</script>

